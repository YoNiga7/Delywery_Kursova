<div class="container p-3">
    <div class="row pt-0 4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-warning">
                <i class="bi bi-patch-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />



    <table  id="tblData" class="table bg-light table-bordered table-striped " style="width:100%">
        <thead>
            <tr>
               <th>Title</th>
                <th>Weight</th>
               <th>Price</th>
               <th>Components</th>
               <th>Category</th>
                  <th></th>
            </tr>
        </thead>
    </table>
</div>

